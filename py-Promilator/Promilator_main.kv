<ContainerBox>:
        FloatLayout:
                GridLayout:
                        id: MenuBar
                        size_hint: 1, 0.04
                        pos_hint:{"x":0, "y":.96}
                        cols: 6
                        orientation: 'horizontal'
                        Button:
                                text: 'Add now'
                                on_release: root.Add(350,5,0)
                        Button:
                                text: 'Add hour ago'
                                on_release: root.Add(350,5,60)
                        Button:
                                text: 'Add 2 hours ago'
                                on_release: root.Add(350,5,120)
                        Button:
                                text: 'Add 8 hours ago'
                                on_release: root.Add(350,5,480)
                        Button:
                                text: 'Export .mp4'
                                on_release: root.Add(350,5,90)
                        Button:
                                text: 'Exit'
                                on_release: root.close_app()
                Label:
                        id: lbl_promile
                        size_hint: 1, .15
                        pos_hint:{"x":0, "y":.75}
                        font_size: 60
                Graph:
                        id: plotter
                        size_hint: .96, .25
                        pos_hint:{"x":0, "y":.5}
                        ymin:-1
                        ymax:6
                        xlabel:"hours"
                        ylabel:"promile"
                        x_ticks_major:4
                        x_grid:True
                Image:
                        id: beer_small
                        size_hint: .25, .11
                        pos_hint:{"x":0, "y":.38}
                        source:'images/beer_small.png'
                Image:
                        id: beer_mid
                        size_hint: .25, .11
                        pos_hint:{"x":.25, "y":.38}
                        source:'images/beer_mid.png'
                Image:
                        id: beer_big
                        size_hint: .25, .11
                        pos_hint:{"x":.5, "y":.38}
                        source:'images/beer_big.png'
                Image:
                        id: wine
                        size_hint: .25, .11
                        pos_hint:{"x":0, "y":.26}
                        source:'images/wine.png'
                Image:
                        id: gin
                        size_hint: .25, .11
                        pos_hint:{"x":.25, "y":.26}
                        source:'images/gin.png'
                Image:
                        id: custom
                        size_hint: .25, .11
                        pos_hint:{"x":.5, "y":.26}
                        source:'images/custom.png'
                GridLayout:
                        size_hint: .24, 0.11
                        pos_hint:{"x":.75, "y":.38}
                        cols: 3
                        orientation: 'horizontal'
                        Button:
                                text: '<'
                                on_release: root.Add(350,5,0)
                        Label:
                                id: lbl_time_added
                                text: "0"
                        Button:
                                text: '>'
                                on_release: root.Add(350,5,120)
                Label:
                        id: lbl_time_info
                        size_hint: .24, 0.11
                        pos_hint:{"x":.75, "y":.26}
                        text: "NOW"
